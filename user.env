# Messaging Platform Tokens
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+14155238886  # Example Twilio WhatsApp number

# Google Sheets Configuration
GOOGLE_APPLICATION_CREDENTIALS=$GOOGLE_APPLICATION_CREDENTIALS
SPREADSHEET_ID=$SPREADSHEET_ID
SHEET_NAME=$SHEET_NAME

# Platform Selection
# Options: "telegram", "whatsapp", or "both"
PLATFORM=both

# Server Configuration
PORT=5000
HOST=0.0.0.0
DEBUG_MODE=True

# AI Configuration
AI_PROVIDER=openai  # Required. Options: "openai", "anthropic", "google", "deepseek"
AI_API_KEY=your_api_key_here  # Required. API key for the chosen AI provider
AI_MODEL=gpt-4  # Required. Model name (e.g., "gpt-4", "claude-3", "gemini-pro", "deepseek-chat")
AI_TEMPERATURE=0.3  # Optional. Controls randomness in responses (0.0 to 1.0)
AI_MAX_TOKENS=150  # Optional. Maximum length of AI response

# Security
AUTHORIZED_USERS=user1,user2,user3  # Comma-separated list of authorized users (optional)
ENABLE_AUTH=False  # Set to True to enable authentication

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=bot.log

# Application Settings
CONFIRMATION_REQUIRED=False  # Set to True to require confirmation before updating sheet
MAX_RETRIES=3  # Maximum number of retries for failed operations
TIMEOUT=30  # Timeout in seconds for API calls 